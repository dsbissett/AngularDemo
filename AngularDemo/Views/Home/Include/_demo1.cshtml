
@{
    ViewBag.Title = "Angular + JavaScript";
}

<div ng-app="demo1">
    <div class="row">
        <!-- Left Column Start -->
        <div class="col-md-4" ng-controller="controller1 as ctrl">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Controller #1
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label">First Name:</label>
                        <input type="text" class="form-control" ng-model="ctrl.firstName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Last Name:</label>
                        <input type="text" class="form-control" ng-model="ctrl.lastName" />
                    </div>
                    <button type="button" class="btn btn-default" style="width: 100%" ng-click="ctrl.set()">Set</button>
                </div>
            </div>
        </div>
        <!-- Left Column End -->
        
        <!-- Middle Column Start -->
        <div class="col-md-4" ng-controller="controller2 as ctrl">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Controller #2
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label">City:</label>
                        <input type="text" class="form-control" ng-model="ctrl.city" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">State:</label>
                        <input type="text" class="form-control" ng-model="ctrl.state" />
                    </div>
                    <button type="button" class="btn btn-default" style="width: 100%" ng-click="ctrl.set()">Set</button>
                </div>
            </div>
        </div>
        <!-- Middle Column End -->
        
        <!-- Right Column Start -->
        <div class="col-md-4" ng-controller="controller3 as ctrl">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Controller #3
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input type="text" class="form-control" ng-model="ctrl.email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone:</label>
                        <input type="text" class="form-control" ng-model="ctrl.phoneNumber" />
                    </div>
                    <button type="button" class="btn btn-default" style="width: 100%" ng-click="ctrl.set()">Set</button>
                </div>
            </div>
        </div>
        <!-- Right Column End -->        
    </div>
    <hr />
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Output:
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-success" style="width: 100%" super-click-thing>Get Data From Service</button>
                        </div>
                    </div>
                    <hr />
                    <code id="codeBody"></code>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
<script src="~/App/basic/demo1.js"></script>    
}

